<Page x:Class="Client.ShowServices"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShowServices">

    <Grid>
        <ListBox ItemsSource="{Binding Things}" HorizontalAlignment="Left" Height="300" Margin="35,140,0,0" VerticalAlignment="Top" Width="480" x:Name="serviceList" SelectionChanged="myListBox_SelectionChanged" PreviewMouseLeftButtonUp="listView_Click"/>
        <Button Content="Load" HorizontalAlignment="Left" Margin="660,385,0,0" VerticalAlignment="Top" Width="100" Height="30" FontSize="15" Click="Button_Click_1"/>
        <TextBox HorizontalAlignment="Left" Height="44" Margin="35,46,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="350" x:Name="keyword"/>
        <Button Content="Search" HorizontalAlignment="Left" Margin="420,56,0,0" VerticalAlignment="Top" Width="95" Height="34" FontSize="15" Click="Button_Click"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="670,170,0,0" VerticalAlignment="Top" x:Name="test"/>

    </Grid>
</Page>
