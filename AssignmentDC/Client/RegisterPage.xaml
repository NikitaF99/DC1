<Page x:Class="Client.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid>
        <Label Content="Enter Username" HorizontalAlignment="Left" Margin="200,130,0,0" VerticalAlignment="Top" Height="35" Width="196" RenderTransformOrigin="0.5,0.5" FontSize="15"/>
        <Label Content="Enter Password" HorizontalAlignment="Left" Margin="200,225,0,0" VerticalAlignment="Top" RenderTransformOrigin="-3.344,-1.164" FontSize="15"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="475,130,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontSize="15" x:Name="username"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="475,237,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontSize="15" x:Name="password"/>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="365,341,0,0" VerticalAlignment="Top" Width="115" Height="34" Click="Button_Click"/>

    </Grid>
</Page>
